// Criar usuários
MERGE (:User {nome:"Marcos"});
MERGE (:User {nome:"Thiago"});
MERGE (:User {nome:"Pedro"});
MERGE (:User {nome:"Fabricio"});
MERGE (:User {nome:"Patricia"});
MERGE (:User {nome:"Camila"});
MERGE (:User {nome:"Isabela"});
MERGE (:User {nome:"Geovana"});
MERGE (:User {nome:"Ana Letícia"});
MERGE (:User {nome:"Pyetra"});
MERGE (:User {nome:"Lays"});

// Criar artistas
UNWIND [
  "Keanu Weast", "Slipknot", "Jorge e Matheus", "Charlie Brow Jr",
  "Cazuza", "Mc Kevin", "Mc Hariel", "Snoop Dogg", "Mcgorila",
  "Metallica", "Mc Ryan", "Scorpions", "Pink Floyd", "Ney Matogrosso",
  "Legião Urbana", "Daniel"
] AS artistName
MERGE (:Artist {nome: artistName});

// Criar gêneros
UNWIND ["Funk","Rock","Sertanejo","MPB","Trap"] AS genreName
MERGE (:Genre {nome: genreName});

// Função auxiliar: cria músicas e relaciona com artista
// Keanu Weast (faixas fictícias)
MERGE (a:Artist {nome: "Keanu Weast"})
UNWIND [
  "Neon Highway (fictícia)",
  "Echoes of Rain (fictícia)",
  "Midnight Driver (fictícia)",
  "Glass Skyline (fictícia)",
  "Lost in Motion (fictícia)",
  "Shadow City (fictícia)",
  "Paper Planes (fictícia)",
  "Velvet Nights (fictícia)",
  "Fade to Blue (fictícia)",
  "Afterglow (fictícia)"
] AS track
MERGE (m:Music {nome: track})
MERGE (a)-[:CANTOU]->(m);

